#include <iostream>
#include <string>
using namespace std;

int main()
{
	setlocale(0, "");
	int x;
	cout << "Введите значение x: ";
	cin >> x;
	int y = (2 * x + 1) * (3 * x + 2) + 2 * (x + 1);
	cout << "x = " << x << endl;
	cout << "y = " << y << endl;
	int a, b, c;
	a = y / 100;
	b = y / 10 % 10;
	c = y % 10;
	std::cout << a << ""
		<< b << ""
		<< c << "" << endl;
	std::cout << "Sum = " << a + b + c << std::endl
		<< "Num = " << a * b * c << std::endl;
	return 0;
}
