#include <iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "rus");

	int a = 248721;
	int i;

	cout << "Итак...друг, чтобы получить от меня похвалу потребуется пароль, готов?) " << endl;
	cout << "Ну же, введи пароль: ";
	cin >> i;
	
	if (a == i)
	{
		cout << "Пароль абсолютно верный " << endl;
		cout << "Вы большой молодец, раз смогли отгадать мой пароль. Либо вы били на угад))" << endl;
	}
	else {
		cout << "Пароль неверный, но вам не стоит огорчаться. У вас есть еще 2 попытки" << endl;
		cout << "Дам вам подсказку: в пароле 6 чисел. И числа от 1 до 8. Желаю удачи) " << endl;
	}

	cout << "Ну же, введи пароль: ";
	cin >> i;

	if (a == i)
	{
		cout << "Пароль абсолютно верный " << endl;
		cout << "Вы большой молодец, раз смогли отгадать мой пароль. Либо вы били на угад))" << endl;
	}
	else {
		cout << "Пароль неверный, вам стоит внимательнее прочесть мою подсказку. У вас осталась 1 попытка" << endl;
		cout << "Раз такой тяжелый случай, то дам еще одну подсказку: первые два числа образуют число, которое при делении на 6 будет равно 4, первое число так же и предпоследнее,в конце число, которое в любой степени равняется самому себе. 87-в середине. " << endl;
	}

	cout << "Ну же, введи пароль: ";
	cin >> i;

	if (a == i)
	{
		cout << "Пароль абсолютно верный " << endl;
		cout << "Вы большой молодец, раз смогли отгадать мой пароль. Либо вы били на угад))" << endl;
	}
	else {
		cout << "Пароль неверный, а кол-во попыток равняется 0 И мы прощаемся с вами" << endl;
	}
	return 0;
}
