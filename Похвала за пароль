#include <iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "rus");

	int b;
	int a = 15052002;
	int i;

	cout << "Выберите уровень сложности (введите кол-во попыток): " << endl;
	cin >> b;
	cout << "Итак...друг, чтобы получить от меня похвалу потребуется пароль, готов?) " << endl;
	cout << "Ну же, введи пароль: ";
	cin >> i;

	for (int g = 1; g < b; g++) {

		if (a == i)
		{
			cout << "Пароль абсолютно верный " << endl;
			cout << "Вы большой молодец, раз смогли отгадать мой пароль. Либо вы били на угад))" << endl;
			return 0;
		}
		else {
			cout << "Пароль неверный, но вам не стоит огорчаться.  " << endl;
			cout << "Дам вам подсказку: в пароле 8 чисел. Пароль включает в себя дату рождения создателя данного веселья ) " << endl;
			cout << "Ну же, введи пароль: ";
			cin >> i;
		}
	}

	
	return 0;
}
